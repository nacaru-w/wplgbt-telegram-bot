{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2019", // Target ES6 or later
        "allowJs": true,
        "outDir": "./dist", // Redirects output structure to the directory
        "rootDir": "./src", // Specifies the root directory of input files
        "strict": true, // Enable all strict type-checking options
        "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
        "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*.ts" // Specifies the files to include
    ],
    "exclude": [
        "node_modules", // Exclude node_modules from the compilation
        "dist" // Exclude the dist directory from the compilation
    ]
}